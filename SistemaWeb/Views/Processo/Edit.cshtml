@using System.Web.Optimization
@using System.Web.UI.HtmlControls
@model DTOLayer.Processo

@{
    Layout = "~/Views/Shared/_LayoutTemporary.cshtml";
    ViewBag.Title = "Cadastro de Processo";
}

<div id="content-header">
    <h1>Cadastro de Processo</h1>
</div> <!-- #content-header -->

<div id="content-container" class="container-fluid edit">

    @using (Html.BeginForm("Save", "Processo", Model))
    {
        <div class="form-horizontal">

            <div class="form-group">
                <label id="" for="NumeroProcesso" class="col-md-2 control-label">Processo:</label>
                <div class="col-md-4">
                    @(Model?.Id == null
                    ? Html.TextBoxFor(model => model.Numero, new { maxlength = 5, @class = "form-control" })
                    : Html.TextBoxFor(model => model.Numero, new { @class = "form-control", @readonly = "readonly" }))
                </div>
            </div>

            <div class="form-group">
                <label for="Marca" class="col-md-2 control-label">Marca:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Marca, new { maxlength = 1000, @class = "form-control" })
                </div>
            </div>

            @*<div class="form-group">
                <label for="MarcaOrtografada" class="col-md-2 control-label">Marca Ortografada:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.MarcaOrtografada, new { maxlength = 1000, @class = "form-control" })
                </div>
            </div>*@

            <div class="form-group">
                <label for="NomeTitular" class="col-md-2 control-label">Titular:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.NomeTitular, new { maxlength = 500, @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="Apostila" class="col-md-2 control-label">Apostila</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Apostila, new { cols = 10, rows = 2, @class = "form-control noresize", })
                </div>
            </div>

            <div class="form-group">
                <label for="classeList" class="col-md-2 control-label">Classe:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    <input type="text" id="classeList" class="form-control">
                </div>
                <label for="" class="col-md-2 control-label">País Titular:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    <input type="text" id="" class="form-control">
                </div>
                <label for="Prioridade" class="col-md-2 control-label">Unionista:</label>
                <div class="col-md-2">
                    @Html.TextBoxFor(model => model.Prioridade, new { maxlength = 100, @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="TipoNatureza" class="col-md-2 control-label">Natureza:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    @Html.DropDownListFor(x => x.TipoNaturezaId, (IEnumerable<SelectListItem>)ViewBag.TipoNatureza, "Selecione...", new { @class = "form-control" })
                </div>
                <label for="" class="col-md-2 control-label">UF Titular:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    <input type="text" id="" class="form-control">
                </div>
                <label for="dataPrioridade" class="col-md-2 control-label">Data Prioridade:</label>
                <div class="col-md-2">
                    <div id="dataPrioridade" class="input-group date" data-auto-close="true" data-date="" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        <input type="text" class="form-control">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="TipoApresentacao" class="col-md-2 control-label">Apresentação:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    @Html.DropDownListFor(x => x.TipoApresentacaoId, (IEnumerable<SelectListItem>)ViewBag.TipoApresentacao, "Selecione...", new { @class = "form-control" })
                </div>
                <label for="CpfCnpjInpi" class="col-md-2     control-label">CPF/CNPJ/CIC:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    @Html.TextBoxFor(model => model.CpfCnpjInpi, new { maxlength = 50, @class = "form-control" })
                </div>
                <label class="col-md-3 control-label">País Prioridade:</label>
                <div class="col-md-1">
                    <input type="text" class="form-control">
                </div>                    
            </div>

            <div class="form-group">
                <label for="dataDeposito" class="col-md-2 control-label">Data Depósito:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    <div id="dataDeposito" class="input-group date" data-auto-close="true" data-date="14-04-2016" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        @Html.TextBoxFor(model => model.DataDeposito, new { @class = "form-control" })
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>
                <div class="col-md-3"></div>
                <label for="cfe4List" class="col-md-2 control-label">CFE(4):</label>
                <div class="col-md-3">
                    <input type="text" id="cfe4List" class="form-control">
                </div>
            </div>

            <div class="form-group">
                <label for="dataConcessao" class="col-md-2 control-label">Data Concessão:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    <div id="dataConcessao" class="input-group date" data-auto-close="true" data-date="14-04-2016" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        <input class="form-control" type="text">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>
                <div class="col-md-2"></div>
                <label for="prazoExtraOrdinarioInicial" class="col-md-2 control-label">Prorrogação:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    <div id="" class="input-group date" data-auto-close="true" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        <input class="form-control" type="text" placeholder="De" id="prazoExtraOrdinarioInicial" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div id="" class="input-group date" data-auto-close="true" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        <input class="form-control" type="text" placeholder="Até" id="prazoExtraOrdinarioInicialFinal" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="dataRegistro" class="col-md-2 control-label">Data Registro:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    <div id="dataRegistro" class="input-group date" data-auto-close="true" data-date="14-04-2016" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        <input class="form-control" type="text">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>
                <div class="col-md-2"></div>
                <label for="prazoOrdinarioInicial" class="col-md-2 control-label">Prorrogação:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    <div id="" class="input-group date" data-auto-close="true" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        <input class="form-control" type="text" placeholder="De" id="prazoOrdinarioInicial" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div id="" class="input-group date" data-auto-close="true" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        <input class="form-control" type="text" placeholder="Até" id="prazoOrdinarioFinal" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>        
            </div>

            <div class="form-group">
                <label for="Especificacao" class="col-md-2 control-label">Especificação:</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Especificacao, new { cols = 10, rows = 2, @class = "form-control resize-vertical", })
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-md-2 control-label">Especificação Inglês:</label>
                <div class="col-md-10">
                    <textarea name="" id="" cols="10" rows="2" class="form-control resize-vertical"></textarea>    
                </div>
            </div>

            <div class="form-group">
                <label for="NomeProcurador" class="col-md-2 control-label">Procurador:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.NomeProcurador, new { maxlength = 500, @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-md-2 control-label">Histórico Publicações:</label>
                <div class="col-md-10">
                    <table class="table table-striped table-bordered table-hover table-highlight table-checkable">
                        <thead>
                            <tr>
                                <th>RPI</th>
                                <th>Data RPI</th>
                                <th>Código</th>
                                <th width="40%">Despacho</th>
                                <th>Complemento do Despacho</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>2045</td>
                                <td>16/03/2010</td>
                                <td>990</td>
                                <td>Concedida a prorrogação do registro</td>
                                <td>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Eum tempora repudiandae exercitationem a ex nulla rerum rem, at eveniet quidem sit voluptate ab, quam quas assumenda optio adipisci in error?</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-md-2 control-label">RPI:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    <input type="text" id="" class="form-control">   
                </div>
                <label for="" class="col-md-2 control-label">Data RPI:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    <div id="" class="input-group date" data-auto-close="true" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        <input class="form-control" type="text" id="" data-date-format="dd/mm/yyyy" data-date-autoclose="true">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>
                <label for="" class="col-md-2 control-label">Código:</label>
                <div class="col-md-2">
                    <input type="text" id="" class="form-control">   
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-md-2 control-label">Complemento do Despacho:</label>
                <div class="col-md-8 margin-bottom-default-md">
                    <textarea name="" id="" cols="10" rows="2" class="form-control noresize"></textarea>    
                </div>
                <div class="col-md-2">
                    <button class="btn btn-danger btn-block-md">Inserir Publicação</button>   
                </div>
            </div>  

            <div class="form-group">
                <label class="col-md-2 control-label">Logotipo da Marca:</label>
                <div class="col-md-2 margin-bottom-default-md">
                    <div class="file-sent-box">
                    </div>
                </div>
                <div class="col-md-8"></div>
            </div>

            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-10">
                    <a class="btn btn-warning" href="/Cliente">
                        Cancelar
                    </a>
                    <input type="submit" value="Salvar" class="btn btn-danger">
                </div>
            </div>

        </div>

    }

</div> <!-- /.content-container -->

@section scripts
{
    @Scripts.Render("~/bundles/textArea")
    @Scripts.Render("~/bundles/processo")
    @Scripts.Render("~/bundles/cadastros")
}

<script>
    $(function(){
        $('.input-group.date').datepicker({

        });
        alert('teste');
    });
</script>
