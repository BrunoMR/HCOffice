@using System.Web.Mvc.Html
@using System.Web.Optimization
@using System.Web.UI.HtmlControls
@model DTOLayer.Pais

@{
    ViewBag.Title = "Cadastro País";
}

<div id="content-header">
    <h1>Cadastro de País</h1>
</div> <!-- #content-header -->

<div id="content-container">

    <div class="row">

        <div class="col-sm-12">

            @using (Html.BeginForm("Save", "Pais", Model))
            {
                <form id="validate-basic" data-validate="parsley" class="form parsley-form">

                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="Sigla">Sigla</label>
                                @Html.TextBoxFor(model => model.Sigla, new { maxlength = 10, @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Nome">Nome</label>
                        @Html.TextAreaFor(model => model.Nome, new { cols = 10, rows = 2, @class = "form-control", })
                    </div>

                    <div class="form-group">
                        <label for="NomeIngles">Nome (em Inglês)</label>
                        @Html.TextAreaFor(model => model.NomeIngles, new { cols = 10, rows = 2, @class = "form-control", })
                    </div>

                    <div class="row">

                        <div class="col-xs-12 col-sm-2 col-md-2 col-lg-1">
                            <a href="@Url.Action("Index", "Pais")">
                                <button type="button" class="btn btn-secondary">
                                    Cancelar
                                </button>
                            </a>
                        </div>

                        <div class="col-xs-12 col-sm-2 col-md-2 col-lg-1">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Salvar</button>
                            </div>
                        </div>
                    </div>

                </form>
            }

        </div>  <!--/.col-->
    </div> <!-- /.row -->

</div> <!-- /.content-container -->

@section scripts
{
    @Scripts.Render("~/bundles/textArea")
    @Scripts.Render("~/bundles/pais")
    @Scripts.Render("~/bundles/cadastros")
}
