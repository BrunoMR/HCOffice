@using System.Web.Mvc.Html
@using System.Web.Optimization
@model IEnumerable<DTOLayer.Uf>

@{
    ViewBag.Title = "Estado";
}

<div id="content-header">
    <h1>Estado</h1>
</div> <!-- #content-header -->

<div id="content-container">

    <div class="row">

        <div class="table-responsive">

            <table class="table table-striped table-bordered table-hover table-highlight table-checkable"
                   data-provide="datatable"
                   data-display-rows="100"
                   data-info="true"
                   data-search="true"
                   data-length-change="true"
                   data-paginate="true">
                <thead>
                    <tr>
                        <th data-direction="asc" data-filterable="true" data-sortable="true">Sigla</th>
                        <th data-filterable="true" data-sortable="true">Nome</th>
                        <th data-filterable="true" data-sortable="true">Nome (em Inglês)</th>
                        <th style="width:5%">Editar</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var estado in Model)
                    {
                        <tr>
                            <td>@estado.Sigla</td>
                            <td>@estado.Nome</td>
                            <td>@estado.NomeIngles</td>
                            <td>
                                <a href="@Url.Action("Detalhe", "Estado", new {id = estado.Id})">
                                    <button type="button" class="btn btn-info">
                                        <i class="fa fa-edit (alias)"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div> <!-- /.table-responsive -->

        <div class="row">
            <div class="col-xs-12 col-sm-2 col-md-2 col-lg-1">
                <a href="@Url.Action("Novo", "Estado")">
                    <button type="button" class="btn btn-success">
                        <i class=" fa fa-plus"> Novo</i>
                    </button>
                </a>
            </div>
        </div>

    </div> <!-- /.row -->

</div> <!-- /.content-container -->

@section scripts
{
    @Scripts.Render("~/bundles/dataTable")
    @Scripts.Render("~/bundles/cadastros")
}
