@using System.Web.Mvc
@using System.Web.Mvc.Html
@using System.Web.Optimization
@using System.Web.UI.HtmlControls
@model DTOLayer.Despacho

@{
    ViewBag.Title = "Cadastro de Despacho";
}

<div id="content-header">
    <h1>Cadastro de Despacho</h1>
</div> <!-- #content-header -->

<div id="content-container">

    <div class="row">

        <div class="col-sm-12">

            @using (Html.BeginForm("Save", "Despacho", Model))
            {
                <form id="validate-basic" data-validate="parsley" class="form parsley-form">

                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="NumeroClasse">Código</label>
                                @(Model?.Id == null
                                ? Html.TextBoxFor(model => model.Codigo, new { maxlength = 100, @class = "form-control" })
                                : Html.TextBoxFor(model => model.Codigo, new { @class = "form-control", @readonly = "readonly" }))
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="Nome">Nome</label>
                                @Html.TextAreaFor(model => model.Descricao, new { cols = 10, rows = 1, @class = "form-control", })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="DescricaoIngles">Nome (em Inglês)</label>
                                @Html.TextAreaFor(model => model.DescricaoIngles, new { cols = 10, rows = 1, @class = "form-control", })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="DescricaoCompleta">Descrição Completa</label>
                                @Html.TextAreaFor(model => model.DescricaoCompleta, new { cols = 10, rows = 10, @class = "form-control", })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="descricaoCompletaIngles">Descrição Completa (em Inglês)</label>
                                @Html.TextAreaFor(model => model.DescricaoCompletaIngles, new { cols = 10, rows = 10, @class = "form-control", })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">

                            <div class="form-group">
                                <label for="Tipo">Tipo</label>
                                @Html.DropDownListFor(x => x.Tipo, (IEnumerable<SelectListItem>)ViewBag.TipoDespacho, "Selecione...", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label for="Situacao">Situação</label>
                            @Html.DropDownListFor(x => x.Situacao, (IEnumerable<SelectListItem>)ViewBag.TipoSituacao, "Selecione...", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="Prazo1EmDias">Prazo 1 em dias</label>
                                @Html.TextBoxFor(model => model.Prazo1EmDias, new { @class = "form-control", })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="Prazo2EmDias">Prazo 2 em dias</label>
                                @Html.TextBoxFor(model => model.Prazo2EmDias, new { @class = "form-control", })
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-xs-12 col-sm-2 col-md-2 col-lg-1">
                            <a href="@Url.Action("Index", "Despacho")">
                                <button type="button" class="btn btn-secondary">
                                    Cancelar
                                </button>
                            </a>
                        </div>

                        <div class="col-xs-12 col-sm-2 col-md-2 col-lg-1">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Salvar</button>
                            </div>
                        </div>
                    </div>

                </form>
            }

        </div>  <!--/.col-->
    </div> <!-- /.row -->

</div> <!-- /.content-container -->

@section scripts
{
    @Scripts.Render("~/bundles/textArea")
    @Scripts.Render("~/bundles/despacho")
    @Scripts.Render("~/bundles/cadastros")
}
