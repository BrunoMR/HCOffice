@using System.Web.Optimization

@model List<DTOLayer.Despacho>

@{
    ViewBag.Title = "Despacho";
}

<div id="content-header">
    <h1>Despacho</h1>
</div> <!-- #content-header -->

<div id="content-container">

    <div class="row">

        <div class="table-responsive">

            <table class="table table-striped table-bordered table-hover table-highlight table-checkable"
                   data-provide="datatable"
                   data-display-rows="100"
                   data-info="true"
                   data-search="true"
                   data-length-change="true"
                   data-paginate="true">
                <thead>
                    <tr>
                        <th data-direction="asc" data-filterable="true" data-sortable="true">Código</th>
                        <th data-filterable="true" data-sortable="true">Descrição</th>
                        <th data-filterable="true" data-sortable="true">Descrição Completa</th>
                        <th data-filterable="true" data-sortable="true">Tipo</th>
                        <th data-filterable="true" data-sortable="true">Situação</th>
                        <th data-filterable="true" data-sortable="true">Prazo 1 em dias</th>
                        <th data-filterable="true" data-sortable="true">Prazo 2 em dias</th>
                        <th style="width:5%">Editar</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var despacho in Model)
                    {
                        <tr>
                            <td>@despacho.Codigo</td>
                            <td>@despacho.Descricao</td>
                            <td>@despacho.DescricaoCompleta</td>
                            <td>@despacho.Tipo</td>
                            <td>@despacho.Situacao</td>
                            <td>@despacho.Prazo1EmDias</td>
                            <td>@despacho.Prazo2EmDias</td>
                            <td>
                                <a href="@Url.Action("Detalhe", "Despacho", new {id = @despacho.Id})">
                                    <button type="button" class="btn btn-info">
                                        <i class=" fa fa-edit (alias)"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div> <!-- /.table-responsive -->

        <div class="row">
            <div class="col-xs-12 col-sm-2 col-md-2 col-lg-1">
                <a href="@Url.Action("Novo", "Despacho")">
                    <button type="button" class="btn btn-success">
                        <i class=" fa fa-plus"> Novo</i>
                    </button>
                </a>
            </div>
        </div>

    </div> <!-- /.row -->

</div> <!-- /.content-container -->

@section scripts
{
    @Scripts.Render("~/bundles/dataTable")
    @Scripts.Render("~/bundles/cadastros")
}

